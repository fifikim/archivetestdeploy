<div id="<%= dom_id upload %>">
  
  <div class="text-center">
    <a href="<%= upload_path(upload) %>">
      <% if upload.thumbnail.attached? %>
        <img src="<%= (url_for(upload.thumbnail)) %>" class="top-rounded card-top border-fill">
      <% else %>
        <%= image_tag "avatar.png", class: "top-rounded card-top" %>
      <% end %>
    </a>

    <div class="card-bottom box-rounded border-fill py-4">
      <div>
        <a href="<%= upload_path(upload) %>">
          <h4 class="mb-1"><%= upload.name %></h4>
        </a>
        
        <div class="d-flex justify-content-around mx-3">
          <div>
            <a href="<%= user_path(upload.user) %>">
              <% if upload.user.avatar.attached? %>
                <img src="<%= (url_for(upload.user.avatar)) %>" class="avatar-mini">
              <% end %>
            </a>
            <p class="mb-2">by <a href="<%= user_path(upload.user) %>"><%= upload.user.username %></a></p>
          </div>
        </div>

      </div>
    </div>

  </div>
</div>
